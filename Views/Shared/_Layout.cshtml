<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookstore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container"  >
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" >
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="https://serving.photos.photobox.com/053627885e24f7c3205acceaeb7d395d2da050b6581a765364d71af41011f2f95f0ad0bd.jpg"
                                     alt="Logo" width="100" height="50">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size: larger; font-weight: bold;" asp-area="" asp-controller="Book" asp-action="Index">Книги </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size: larger; font-weight: bold;" asp-area="" asp-controller="Author" asp-action="Index">Автори</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size: larger; font-weight: bold;" asp-area="" asp-controller="Movie" asp-action="Index">
                                Филмови снимени според книги
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" style="font-size: larger; font-weight: bold;" asp-area="" asp-controller="Book" asp-action="OrderedBooks">Нарачки</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" style="font-size: larger; font-weight: bold;" asp-area="" asp-controller="Admin" asp-action="Index">Сите корисници</a>
                            </li>
                        }



                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="text-align: left;">          
          &copy; 2020 - Андромеда 
            <span style="float:right;">
                @if (User.Identity.IsAuthenticated)
                {
                @(User.Identity.Name)
                   <a  asp-area="" asp-controller="Account" asp-action="Logout">Одјави се</a>
                }
                else
                {
                    <a asp-area="" asp-controller="Account" asp-action="Login">
                        Најави се
                    </a>
                }
            </span>
         </div>                          
            
            
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
