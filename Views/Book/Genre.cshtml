@model IEnumerable<Bookstore.Models.Book>
    @{
    ViewData["Title"] = "Книги";
}

@foreach (var item in Model)
        {
            @if(item.Genre=="Трилер")
            {
                <h2>Трилер</h2>
           <div class="row">
      <div id="dataListItem" class="col-md-4">
                <img src="~/pictures/@item.Picture"
                     height="300" width="150"
                     asp-append-version="true"/>                
            
                <a asp-action="Details" asp-route-id="@item.BooksID"> @Html.DisplayFor(modelItem => item.Title) </a>
          
               <p> @Html.DisplayFor(modelItem => item.Price) <div>денари</div></p>
         
               <p> <a asp-action="Edit" asp-route-id="@item.BooksID">Измени</a> |
                <a asp-action="Delete" asp-route-id="@item.BooksID">Избриши</a></p>      

             </div>   
      </div>             
       
            }  

        }