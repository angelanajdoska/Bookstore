@model IEnumerable<Bookstore.Models.Author>

@{
    ViewData["Title"] = "Автори";
}

 <h2>Автори</h2>

<p>
    <a asp-action="Create">Додади автор</a>
</p>

@foreach (var item in Model) {
    <div class="row">
    <div id="dataListItem" class="col-md-4">
       <p>  <img src="~/pictures/@item.Picture"
                     height="300" width="150"
                     asp-append-version="true"/> </p>                 
          
               <p style="text-align: center;"><a asp-action="Details" asp-route-id="@item.AuthorID">@Html.DisplayFor(modelItem => item.FullName)</a></p>
            
               <p> <a asp-action="Edit" asp-route-id="@item.AuthorID">Измени</a> |
                <a asp-action="Delete" asp-route-id="@item.AuthorID">Избриши</a> </p>  
        </div>   
      </div>              
}
